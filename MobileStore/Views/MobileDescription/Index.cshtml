@model IEnumerable<Mobile>

@{
    ViewData["Title"] = "List of Descriptions";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.MobileName)</th>
                    <th>@Html.DisplayNameFor(model => model.ManufactureDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Description.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            
                            @Html.DisplayFor(modelItem => item.MobileName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ManufactureDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.MobileDescriptionId"><i class="bi bi-eye"></i>Details </a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MobileDescriptionId"><i class="bi bi-pencil-square"></i>Edit </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</div>