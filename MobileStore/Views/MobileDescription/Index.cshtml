@model IEnumerable<MobileDescription>

@{
    ViewData["Title"] = "List of Descriptions";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Mobile.MobileName)</th>
                    <th>@Html.DisplayNameFor(model => model.Mobile.ManufactureDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Mobile.MobileName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Mobile.ManufactureDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info"><i class="bi bi-pencil-square"></i>Details </a>
                            <a class="btn btn-outline-primary"><i class="bi bi-eye"></i>Edit </a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</div>

@*HTML*@