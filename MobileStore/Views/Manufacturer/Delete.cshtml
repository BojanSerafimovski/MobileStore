@model Manufacturer

@{
    ViewData["Title"] = "Delete a mobile manufacturer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Delete confirmation for @Model.ManufacturerName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 250px;" id="PictureUrlPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" readonly/>
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManufacturerName" class="control-label"></label>
                        <input asp-for="ManufacturerName" class="form-control" readonly/>
                        <span asp-validation-for="ManufacturerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManufacturerBiography" class="control-label"></label>
                        <input asp-for="ManufacturerBiography" class="form-control" readonly/>
                        <span asp-validation-for="ManufacturerBiography" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ManufacturerId" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" id="btnDelete"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all manufactureres</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('PictureUrlPreview');
            output.src = $("#PictureUrl").val();
        });

        $(document).ready(function () {
            $("#btnDelete").on("click", function () {
                alert('Are you sure you want to delete this manufacturer?');
            });
        });
    </script>
}
