@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-success my-2 my-sm-0 text-white" asp-controller="Authentication" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-primary my-2 my-sm-0 text-white" asp-controller="Authentication" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary my-2 my-sm-0" style="margin-right: 0.6em;" asp-controller="Authentication" asp-action="RegisterAdmin">
            <i class="bi bi-person-plus"></i> Register Admin
        </a>
    }
        <button class="btn btn-success btn btn-outline-success text-white my-2 my-sm-0">
            <i class="bi bi-person-badge"></i> Hello @UserManager.GetUserName(User)
        </button>
        <span style="padding: 5px;"></span>
        <form asp-controller="Authentication" asp-action="Logout">
            <button class="btn btn-danger my-2 my-sm-0 text-white" id="logoutBtn">
                <i class="bi bi-box-arrow-in-right"></i> Log out
            </button>
        </form>
}
