@*Define what u expect to see in this view*@
@model IEnumerable<Mobile>

@{
    ViewData["Title"] = "List of Mobile Phones";
}

@*Define ViewData*@

@*Write Code*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MobileImage)</th>
                    <th>@Html.DisplayNameFor(model => model.MobileName)</th>
                    <th>@Html.DisplayNameFor(model => model.MobilePrice)</th>
                    <th>@Html.DisplayNameFor(model => model.Manufacturer.ManufacturerName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.MobileImage" alt="@item.MobileName" style="max-width: 200px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MobileName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MobilePrice).00&euro;
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info"><i class="bi bi-pencil-square"></i>Details </a>
                            <a class="btn btn-outline-primary"><i class="bi bi-eye"></i>Edit </a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</div>